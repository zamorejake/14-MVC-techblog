<div class="row">
  <div class="col-auto">
    <h2 class="white">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3 class="white">Create a New Tech Blog:</h3>
    <form class="form new-techblog-form" action="/create-techblog" method="POST">
      <div class="form-group">
        <label class="white"for="techblog-title">Title:</label>
        <input class="form-input" type="text" id="techblog-title" name="techblog-title" />
      </div>
      <div class="form-group">
        <label class="white" for="techblog-content">Content:</label>
        <textarea class="form-input" id="techblog-content" name="techblog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
<h3 class="white">Your blogs:</h3>
  {{#if projects.length}}
  <div class="col-md-6 techblog-list">
    {{#each projects as |techblog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class="teal"href="/post/{{techblog.id}}">{{techblog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <!-- as I was finishing I realized jazz css had custom classes... -->
        <button class="btn btn-sm btn-primary" data-id="{{techblog.id}}">EDIT</button>
        <button class="btn btn-sm btn-danger" data-id="{{techblog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
    {{else}}
        <h4 class="white">None! You should write one üìù</h4>
  </div>
  {{/if}}
</div>

<script src="js/profile.js"></script>
